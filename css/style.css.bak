*{
	margin:0;
	padding:0;
}
body{
	background:#0e184c;
}
.top{
	width:100%;
	height:100px;
	background:#1e1616;
}
.top h2{
	padding:40px;
	color:#fff;
	letter-spacing:0.12rem;
	cursor:pointer;
}
.lft{
	width:20%;
	height:100%;
	float:left;
	background:#0e184c;
}
.lft h2{
	color:#fff;
}
.lft img{
	width:100px;
}
.lft ul li{
	list-style:none;
	float:center;
	margin:40px;
}
.lft ul li a{
	text-decoration:none;
	color:#fff;
	font-size:20px;
	padding:6px 15px;
	font-weight:bold;
	transition:0.7s;
	border-radius:14px;
}
.lft ul li a:hover{
	background:#fff;
	color:#e1700f;
}
span{
	color:#e1700f;
}
.rgt{
	width:80%;
    height:100%;
	float:right;
	background:#fff;
}
.rgt h2{
	padding:6%;
}
.up{
	width:100%;
	height:auto;
	color:#1c1212;
	background:#eee;
}
.up h3{
	margin-left:10px;
}
.add{
	width:100%;
	height:auto;
	background:#eee;
	line-height:center;
}
.add h3{
	margin-left:10px;
	padding-top:10px;
	cursor:pointer;
	
}
.add a{
	float:right;
	line-height:center;
}
.btn{
	color:#fff;
	background:#0e184c;
	text-decoration:none;
	font-weight:bold;
	border:2px solid transparent;
	padding:0.8rem 1.8rem;
	border-radius:10px;
	transition:0.4s;
}
.btn:hover{
    opacity:.7;
	border:2px solid #fff;
}
.canc{
	text-decoration:none;
	color:#fff;
	float:left;
	background:red;
	font-weight:bold;
	border:2px solid transparent;
	padding:0.3rem 1.1rem;
	border-radius:10px;
	transition:0.4s;
}
.canc:hover{
    opacity:.7;
	border:2px solid #fff;
}
.box{
	display:flex;
	margin-top:20px;
	margin-left:10px;
	justify-content:space-between;
}
.card{
	width:300px;
	height:200px;
	border:1px solid #0e184c;
	border-radius:20px;
	padding:1.3rem 2rem;
}
.form{
	width:400px;
	border:2px solid #000;
	background:#0e184c;
	border-radius:15px;
}
label{
	text-align:center;
	font-weight:bold;
	color:#000;
}
.inp{
	font-size:25px;
	color:#000;
	border-radius:15px;
	width:100%;
}
table{
	margin-left:10px;
}
.t1{
	color:#000;
	background:#fff;
	font-weight:bold;
	font-size:25px;
	border:2px solid #000;
	padding:10px 10px;
}
.t2{
	color:#000;
	background:#fff;
	font-weight:bold;
	font-size:20px;
	border:2px solid #000;
	padding:10px 10px;
	background:#eee;
}
.a1{
	text-decoration:none;
	color:#fff;
	padding:5px 5px;
	background:blue;
	border-radius:50%;
}
.a1:hover{
	opacity:.7;
}
.a2{
	text-decoration:none;
	color:#fff;
	padding:7px 7px;
	background:red;
	border-radius:50%;
}
.a2:hover{
	opacity:.7;
}
.res{
	margin-left:20px;
}
.in{
	font-size:20px;
	width:55%;
}
h3 img{
	width:10px;
}
.book{
	color:#fff;
	width:180%;
	background:#0e184c;
	text-decoration:none;
	font-weight:bold;
	border:2px solid transparent;
	padding:0.8rem 1.8rem;
	border-radius:10px;
	transition:0.4s;
}
.book:hover{
	opacity:.7;
	border:2px solid #fff;
}